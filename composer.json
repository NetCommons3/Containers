{
    "name":        "netcommons/containers",
    "description": "Containers Plugin for CakePHP",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "containers"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name": "NetCommons Community",
            "homepage": "http://www.netcommons.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakedc/migrations":            "~2.2",
        "netcommons/boxes":             "@dev",
        "netcommons/net-commons":       "@dev",
        "netcommons/pages":             "@dev"
    },
    "config": {
        "vendor-dir": "vendors"
    }
}
